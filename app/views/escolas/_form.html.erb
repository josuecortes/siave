<%= simple_form_for(@escola) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :codigo %>
    <%= f.input :nome %>
    <%= f.input :cep %>
    <%= f.input :numero %>
    <%= f.input :municipio, :collection => @municipios %>
    <%= f.input :email %>
    <%= f.input :contato %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=>'btn btn-primary' %>
    <%= link_to 'Voltar', escolas_path, :class=>'btn btn-default' %>
  </div>
<% end %>
