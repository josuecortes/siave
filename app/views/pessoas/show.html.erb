<% content_for :titulo do %>
  <h4>
    <strong>
      Detalhes da Pessoa <%= link_icone('detalhes') %>
    </strong>
  </h4>
<% end %>

<p>
  <strong>Nome:</strong>
  <%= @pessoa.nome %>
</p>

<p>
  <strong>Nome Social ou Apelido:</strong>
  <%= detalhes(@pessoa.nome_social) %>
</p>

<p>
  <strong>Data nascimento:</strong>
  <%= data_br(@pessoa.data_nascimento) %>
</p>

<p>
  <strong>Sexo:</strong>
  <%= @pessoa.sexo %>
</p>

<p>
  <strong>Ra√ßa/Cor:</strong>
  <%= @pessoa.raca %>
</p>

<p>
  <strong>Escolaridade:</strong>
  <%= @pessoa.escolaridade %>
</p>

<p>
  <strong>Documento:</strong>
  <%= simnao(@pessoa.documento) %>
</p>


<% if @pessoa.documento == true %>

  <p>
    <strong>Tipo documento:</strong>
    <%= @pessoa.tipo_documento %>
  </p>

  <p>
    <strong>Numero documento:</strong>
    <%= @pessoa.numero_documento %>
  </p>

<% end %>

<p>
  <strong>Deficiente:</strong>
  <%= simnao(@pessoa.deficiente) %>
</p>

<% if @pessoa.deficiente == true %>

  <p>
    <strong>Tipo deficiencia:</strong>
    <%= @pessoa.tipo_deficiencia %>
  </p>

<% end %>

<p>
  <strong>Nome responsavel:</strong>
  <%= @pessoa.nome_responsavel %>
</p>

<p>
  <strong>Logradouro:</strong>
  <%= detalhes(@pessoa.logradouro) %>
</p>

<p>
  <strong>Numero:</strong>
  <%= detalhes(@pessoa.numero) %>
</p>

<p>
  <strong>Bairro:</strong>
  <%= detalhes(@pessoa.bairro) %>
</p>

<p>
  <strong>Cidade:</strong>
  <%= detalhes(@pessoa.cidade) %>
</p>

<p>
  <strong>Cep:</strong>
  <%= detalhes(@pessoa.cep) %>
</p>

<p>
  <strong>Contato:</strong>
  <%= detalhes(@pessoa.contato) %>
</p>

<%= link_to link_icone('voltar'), pessoas_path, :class=>'btn btn-default', :title=>"Voltar" %> 
<%= link_to link_icone('editar'), edit_pessoa_path(@pessoa), :class=>"btn btn-primary", :title=>"Editar" %> 
<%= link_to link_icone('nova'), new_pessoa_path, :class=> 'btn btn-success', :title=>"Nova Pessoa" %>

