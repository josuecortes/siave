<%= simple_nested_form_for(@pessoa) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :data_nascimento %>
    <%= f.input :sexo, collection: @lista_sexos, as: :select, :include_blank => false %>
    <%= f.input :raca %>
    <%= f.input :escolaridade, collection: @lista_escolaridades, as: :select, :include_blank => false %>

    <%= f.input :documento, collection: @lista_booleans, as: :select, :include_blank => false %>
    
    <div id="atributos_documento">

      <%if !@pessoa.new_record?%>
        <%if @pessoa.documento and @pessoa.documento==true%>
          <%= f.input :tipo_ocorrencia_id, collection: TipoOcorrencia.order([:descricao]), :label=>"Tipo de OcorrÃªncia", label_method: :descricao, value_method: :id, include_blank: true, :input_html => {:value => (@desdobramento.tipo_ocorrencia if @desdobramento.tipo_ocorrencia)} %>
          <%else%>
            <%= f.input :tipo_agressor_id, collection: TipoAgressor.order([:descricao]), :label=>"Tipo de Agressor", label_method: :descricao, value_method: :id, include_blank: true, :input_html => {:value => (@desdobramento.tipo_agressor.descricao if @desdobramento.tipo_agressor)} %>
          <%end%>
      <%end%>

      
    </div>

    <%= f.input :deficiente, collection: @lista_booleans, as: :select, :include_blank => false %>

    <div id="atributos_deficiente">
      
    </div>    
    
    <%= f.input :nome_responsavel %>
    <%= f.input :cep %>
    <%= f.input :numero %>
    <%= f.input :complemento %>

    <div id="contatos">
      <%= f.fields_for :contatos, :wrapper => false, :html=>{:class=>"form-inline"} do |cf| %>
        <div class="fields">
          <%= cf.input :tipo,  :label=>"Tipo Contato", collection: @lista_contatos, as: :select, :include_blank => false %>
          <%= cf.input :numero %>
          <div class="pull-right">
            <%= cf.link_to_remove link_icone2("apagar","Remover Contato"), :class=>'btn btn-danger' %>
          </div>
          <br/>
        </div>
      <% end %>
    </div>
    <div class="form-actions">
      <%= f.link_to_add link_icone2("novo","Adicionar Contato"), :contatos, :data => { :target => "#contatos" }, :class=>'btn btn-success' %>          
    </div>
    <br/>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=>'btn btn-primary' %>
    <%= link_to 'Voltar', pessoas_path, :class=>'btn btn-default' %>
  </div>

<% end %>
