<div class="authform">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>SIAVE/AP - Login</h3>
    <%= render 'layouts/messages' %>
    <br/>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Cadastre-se', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      
      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <%= f.submit 'Entrar', :class => 'button right' %>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox" style="width:150px">
        <label>
          <%= f.check_box :remember_me %> Lembrar
        </label>
      </div>
    <% end -%>
    <br/>
    <%- if devise_mapping.recoverable? %>
      <%= link_to "Perdeu sua senha?", new_password_path(resource_name), class: 'left' %>
    <% end -%>
  <% end %>
</div>


