<% @contato = @pessoa.contatos.build %>
<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Adicionar Pessoa</h4>
      </div>
      <div class="modal-body">
      <div id='erros'>
      
      </div>
        <%= simple_nested_form_for(@pessoa, :remote=>true, :url=>criar_pessoa_ocorrencias_url,:validate=>true) do |f| %>
          
           

          <div class="form-inputs">
            <%= f.input :nome ,:wrapper_html=>{:id=>"div_pessoa_nome"}%>
            <%= f.input :nome_social, :label=>"Nome Social ou Apelido" %>
            <%= f.input :data_nascimento ,:wrapper_html=>{:id=>"div_pessoa_data_nascimento"}%>
            <%= f.input :sexo, collection: @lista_sexos, as: :select, :include_blank => true ,:wrapper_html=>{:id=>"div_pessoa_sexo"}%>
            <%= f.input :raca, :label=>"RaÃ§a/Cor", collection: @lista_racas, as: :select, :include_blank => true ,:wrapper_html=>{:id=>"div_pessoa_raca"}%>
            <%= f.input :escolaridade, collection: @lista_escolaridades, as: :select, :include_blank => true %>

            <%= f.input :documento, collection: @lista_booleans, as: :select, :include_blank => true %>
            
            <div id="atributos_documento">

              <%if @pessoa.documento and @pessoa.documento==true%>
                <%= f.input :tipo_documento, collection: @lista_documentos, as: :select, :include_blank => true %>
                <%= f.input :numero_documento %>
              <%end%>
              
            </div>

            <%= f.input :deficiente, collection: @lista_booleans, as: :select, :include_blank => true %>

            <div id="atributos_deficiente">

              <%if @pessoa.deficiente and @pessoa.deficiente==true%>
                <%= f.input :tipo_deficiencia, collection: @lista_deficiencias, as: :select, :include_blank => true %>
              <%end%>
              
            </div>    
            
            <%= f.input :nome_responsavel %>
            
            <%= f.input :logradouro %>
            <%= f.input :numero %>
            <%= f.input :bairro %>
            <%= f.input :cidade %>
            <%= f.input :cep %>
            
            <%= f.input :contato %>
  
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <%= f.button :submit, :class=>'btn btn-primary' %>
          </div>

        <% end %>

      </div>
      
    </div>
  </div>