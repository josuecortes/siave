<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Adicionar Pessoa</h4>
      </div>
      <div class="modal-body">
      <div id='erros'>
      
      </div>
        <%= simple_nested_form_for(@pessoa, :remote=>true, :url=>criar_pessoa_ocorrencias_url) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :nome %>
            <%= f.input :data_nascimento %>
            <%= f.input :sexo, collection: @lista_sexos, as: :select, :include_blank => false %>
            <%= f.input :raca %>
            <%= f.input :escolaridade, collection: @lista_escolaridades, as: :select, :include_blank => false %>

            <%= f.input :documento, collection: @lista_booleans, as: :select, :include_blank => false %>
            
            <div id="atributos_documento">
              
            </div>

            <%= f.input :deficiente, collection: @lista_booleans, as: :select, :include_blank => false %>

            <div id="atributos_deficiente">
              
            </div>    
            
            <%= f.input :nome_responsavel %>
            <%= f.input :cep %>
            <%= f.input :numero %>
            <%= f.input :complemento %>

            <div id="contatos">
              <%= f.fields_for :contatos, :wrapper => false, :html=>{:class=>"form-inline"} do |cf| %>
                <div class="fields">
                  <%= cf.input :tipo,  :label=>"Tipo Contato", collection: @lista_contatos, as: :select, :include_blank => false %>
                  <%= cf.input :numero %>
                  <div class="pull-right">
                    <%= cf.link_to_remove "Remover Contato", :class=>'btn btn-danger' %>
                  </div>
                  <br/>
                </div>
              <% end %>
            </div>
            <div class="form-actions">
              <%= f.link_to_add "Adicionar Contato", :contatos, :data => { :target => "#contatos" }, :class=>'btn btn-success' %>          
            </div>
            <br/>

          </div>
  
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <%= f.button :submit, :class=>'btn btn-primary' %>
          </div>

        <% end %>

      </div>
      
    </div>
  </div>