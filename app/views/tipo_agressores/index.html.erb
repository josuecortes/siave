<%- model_class = TipoAgressor -%>

<% content_for :titulo do %>
  <ul class="list-inline pull-right">
    <%= search_form_for @q, :url=>tipo_agressores_url,  :class=>'navbar-form navbar-right', :role=>'search' do |f| %>
      
      <!-- NOVO -->
      <%= link_to link_icone('novo'), new_tipo_agressor_path, :class=> 'btn btn-success', :title=>"Novo Tipo Agressor" %>
      <!-- /NOVO -->

      <%= f.search_field :descricao_cont, :class=>'form-control', :placeholder=>'Descricao' %>
      <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>

    <% end %>
  </ul>
  <h4>
    <strong>
      Lista de Tipos de Agressores <i class="glyphicon glyphicon-ok"></i>
    </strong>
  </h4>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_agressores.each do |tipo_agressor| %>
      <tr>
        <td><%= tipo_agressor.descricao %></td>
        <td>
          <%= link_to link_icone('detalhes'),
                    tipo_agressor_path(tipo_agressor), :class => 'btn btn-default', :title=>"Detalhes" %>
          <%= link_to link_icone('editar'),
                    edit_tipo_agressor_path(tipo_agressor), :class => 'btn btn-primary', :title=>"Editar" %>
          <% if can? :delete, tipo_agressor %>
            <%= link_to link_icone('apagar'), tipo_agressor_path(tipo_agressor), :class=>"btn btn-danger", method: :delete, data: { confirm: 'Você está certo disso?' }, :title=>"Apagar" %> 
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<center>
  <%= will_paginate @tipo_agressores, renderer: BootstrapPagination::Rails %>
</center>
