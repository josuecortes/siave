    jQuery.post("<%=desdobramento_tipo_ocorrencia_ocorrencias_path%>"+"?tipo_ocorrencia=" + tipo_ocorrencia, function(data){
      $("#desdobramento_tipo_ocorrencia").html(data);   
    });
  });
});

